@model Model.EntityFramework.Content
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="site-content" tabindex="-1">
    <div class="container">

        <nav itemprop="breadcrumb" class="woocommerce-breadcrumb"><a href="home.html">Home</a><span class="delimiter"><i class="fa fa-angle-right"></i></span><a href="#">Tin tức</a><span class="delimiter"><i class="fa fa-angle-right"></i></span>@Model.Name</nav>

        <div id="primary" class="content-area">
            <main id="main" class="site-main">
                <article class="post type-post status-publish format-gallery has-post-thumbnail hentry">
                    <div class="media-attachment">
                        <div class="media-attachment-gallery">
                            <div class=" ">
                                <div class="item">
                                    <figure>
                                        <img width="1144" height="600" src= @Model.Image class="attachment-post-thumbnail size-post-thumbnail" alt="1">
                                    </figure>
                                </div><!-- /.item -->
                            </div>
                        </div><!-- /.media-attachment-gallery -->
                    </div>

                    <header class="entry-header">
                        <h1 class="entry-title" itemprop="name headline">@Model.MetaTitle<span class="comments-link"><a href="#comments">Bình luận</a></span></h1>

                        <div class="entry-meta">
                            <span class="cat-links"><a href="#" rel="category tag">
                                  <ul>
                                      @{
                                          var tags = (List<Model.EntityFramework.Tag>)ViewBag.Tags;
                                          foreach (var s in tags)
                                          {
                                              <li><a href="/tag/@s.ID">@s.Name</a></li>
                                          }
                                      }
                                  </ul>
                            </span>
                            <span class="posted-on"><a href="#" rel="bookmark"><time class="entry-date published" datetime="2016-03-04T07:34:20+00:00">@Model.CreatedDate</time> <time class="updated" datetime="2016-03-04T18:46:11+00:00" itemprop="datePublished">@Model.ModifiedDate</time></a></span>
                        </div>
                    </header><!-- .entry-header -->

                    <div class="entry-content" itemprop="articleBody">
                        <p class="highlight">@Model.Description</p>
                        <p>@Model.Detail</p>
                    </div><!-- .entry-content -->
                </article>
              
                <nav class="navigation post-navigation">
                    <h2 class="screen-reader-text">Post navigation</h2>
                    <div class="nav-links"><div class="nav-previous"><a rel="prev" href="#"><span class="meta-nav">←</span>&nbsp;@Model.Name</a></div></div>
                </nav>
                <div class="comments-area" id="comments">

                    <h2 class="comments-title">3 bình luận</h2>

                    <ol class="comment-list">
                        <li id="comment-396" class="comment even thread-even depth-1">
                            <div class="media">
                                <div class="gravatar-wrapper media-left">
                                    <img class="avatar avatar-100 photo" src="assets/images/blog/avatar.jpg" alt="">
                                </div>

                                <div class="comment-body media-body">

                                    <div class="comment-content" id="div-comment-396">
                                        <p>bình luận 1</p>
                                    </div>

                                    <div class="comment-meta" id="div-comment-meta-396">
                                        <div class="author vcard">
                                            <cite class="fn media-heading">John Doe</cite>
                                        </div>

                                        <div class="date">
                                            <a class="comment-date" href="#">16 tháng 3 2019</a>
                                        </div>

                                        <div class="reply">
                                            <a aria-label="Reply to John Doe" onclick="return addComment.moveForm( &quot;div-comment-meta-396&quot;, &quot;396&quot;, &quot;respond&quot;, &quot;2415&quot; )" href="#" class="comment-reply-link" rel="nofollow">Reply</a>
                                        </div>
                                    </div>

                                </div><!-- /.comment-body -->
                            </div><!-- /.media -->
                        </li><!-- #comment-## -->
                        <li id="comment-397" class="comment odd alt thread-odd thread-alt depth-1">
                            <div class="media">
                                <div class="gravatar-wrapper media-left">
                                    <img class="avatar avatar-100 photo" src="assets/images/blog/avatar.jpg" alt="">
                                </div>

                                <div class="comment-body media-body">

                                    <div class="comment-content" id="div-comment-397">
                                        <p>bình luận 2</p>
                                    </div>

                                    <div class="comment-meta" id="div-comment-meta-397">
                                        <div class="author vcard">
                                            <cite class="fn media-heading">Anna Kowalsky</cite>
                                        </div>

                                        <div class="date">
                                            <a class="comment-date" href="#">16 tháng 3 2019</a>
                                        </div>

                                        <div class="reply">
                                            <a aria-label="Reply to Anna Kowalsky" onclick="return addComment.moveForm( &quot;div-comment-meta-397&quot;, &quot;397&quot;, &quot;respond&quot;, &quot;2415&quot; )" href="#" class="comment-reply-link" rel="nofollow">Reply</a>
                                        </div>
                                    </div>

                                </div><!-- /.comment-body -->
                            </div><!-- /.media -->
                        </li><!-- #comment-## -->
                        <li class="comment even thread-even depth-1">
                            <div class="media">
                                <div class="gravatar-wrapper media-left">
                                    <img class="avatar avatar-100 photo" src="assets/images/blog/avatar.jpg" alt="">
                                </div>

                                <div class="comment-body media-body">

                                    <div class="comment-content" id="div-comment-398">
                                        <p>Bình luận 3 </p>
                                    </div>

                                    <div class="comment-meta" id="div-comment-meta-398">
                                        <div class="author vcard">
                                            <cite class="fn media-heading">Peter Wargner</cite>
                                        </div>

                                        <div class="date">
                                            <a class="comment-date" href="#">19 tháng 4 2019</a>
                                        </div>

                                        <div class="reply">
                                            <a aria-label="Reply to Peter Wargner" onclick="return addComment.moveForm( &quot;div-comment-meta-398&quot;, &quot;398&quot;, &quot;respond&quot;, &quot;2415&quot; )" href="#" class="comment-reply-link" rel="nofollow">Reply</a>
                                        </div>
                                    </div>

                                </div><!-- /.comment-body -->
                            </div><!-- /.media -->
                        </li><!-- #comment-## -->
                    </ol><!-- .comment-list -->

                    <div class="comment-respond" id="respond">
                        <h3 class="comment-reply-title" id="reply-title">Trả lời bình luận <small><a style="display:none;" href="#" id="cancel-comment-reply-link" rel="nofollow">Hủy trả lời</a></small></h3>
                        <form novalidate="" class="comment-form" id="commentform" method="post" action="#">
                            <p class="comment-notes"><span id="email-notes">Email của bạn sẽ không bị hiển thị</span> Vui lòng điền đủ mục đánh dấu * <span class="required">*</span></p><p class="comment-form-comment"><label for="comment">Bình luận</label> <textarea required="required" maxlength="65525" rows="8" cols="45" name="comment" id="comment"></textarea></p><p class="comment-form-author"><label for="author">Tên <span class="required">*</span></label> <input type="text" required="required" aria-required="true" maxlength="245" size="30" value="" name="author" id="author"></p>
                            <p class="comment-form-email"><label for="email">Email <span class="required">*</span></label> <input type="email" required="required" aria-required="true" aria-describedby="email-notes" maxlength="100" size="30" value="" name="email" id="email"></p>
                            <p class="comment-form-url"><label for="url">Website</label> <input type="url" maxlength="200" size="30" value="" name="url" id="url"></p>
                            <p class="form-submit"><input type="submit" value="Đăng bình luận" class="submit"></p>
                        </form>
                    </div><!-- #respond -->

                </div>
            </main><!-- #main -->
        </div><!-- #primary -->

        <div id="sidebar" class="sidebar-blog" role="complementary">
            <aside id="search-2" class="widget widget_search">
                <form role="search" method="get" class="search-form" action="#">
                    <label>
                        <span class="screen-reader-text">Search for:</span>
                        <input type="search" class="search-field" placeholder="Search …" value="" name="s">
                    </label>
                    <input type="submit" class="search-submit" value="Search">
                </form>
            </aside>
            <aside class="widget widget_text">
                <h3 class="widget-title">Giới thiệu</h3>
                <div class="textwidget">Đây là trang tin tức</div>
            </aside>
            <aside class="widget widget_categories">
                <h3 class="widget-title">Danh mục</h3>
                <ul>
                    @{
                        var categories = (List<Model.EntityFramework.Category>)ViewBag.category;
                        foreach (var category in categories)
                        {
                            <li><a href="/Category/@category.ID">@category.Name</a></li>
                        }
                    }
                </ul>
            </aside>
            <aside class="widget electro_recent_posts_widget">
                <h3 class="widget-title">Tin tức gần đây</h3>
                <ul>
                    @{
                        var recentpost = (List<Model.EntityFramework.Content>)ViewBag.recentpost;
                        foreach (var category in recentpost)
                        {
                            <li>
                                <a class="post-thumbnail" href="/Content/Detail/@category.ID"><img width="150" height="150" src=@category.Image class="wp-post-image" alt="1"></a>
                                <div class="post-content">
                                    <a class="post-name" href="/Content/Detail/@category.ID">@category.Name</a>
                                    <span class="post-date">@category.CreatedDate</span>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </aside>
            <aside id="tag_cloud-2" class="widget widget_tag_cloud">
                <h3 class="widget-title">Danh mục tag</h3>
   
                    <div class="tagcloud">
                        @{
                            var tag = (List<Model.EntityFramework.Tag>)ViewBag.tag;
                            foreach (var item in tag)
                            {
                                <a href="/Content/Tag/@item.ID" class="" title="10 topics" style="font-size: 22pt;">@item.Name</a>
                            }

                        }
                    </div>

            </aside>
        </div>
    </div><!-- .container -->
</div>