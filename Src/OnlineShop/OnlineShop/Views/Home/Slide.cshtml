@model List<Model.EntityFramework.Slide>


@foreach (var item in Model)
{
    <div class="item" style="background-image: url(@item.Image);">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-5">
                    <div class="caption vertical-center text-left">
                        <div class="hero-1 fadeInDown-1">
                            @item.Description
                        </div>

                        <div class="hero-subtitle fadeInDown-2">
                           @item.Description
                        </div>
                        @*<div class="hero-v2-price fadeInDown-3">
                                from <br><span>$749</span>
                            </div>*@
                        <div class="hero-action-btn fadeInDown-4">
                            <a href="@item.Link" class="big le-button ">Start Buying</a>
                        </div>
                    </div><!-- /.caption -->
                </div>
            </div>
        </div><!-- /.container -->
    </div><!-- /.item -->

}

