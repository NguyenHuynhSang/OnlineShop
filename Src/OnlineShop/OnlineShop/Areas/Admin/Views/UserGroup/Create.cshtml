
@model Model.ViewModel.RoleSelectViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
    var items = (IEnumerable<SelectListItem>)(ViewBag.ListRole);
}

@section jsFooter{
    <script src="/assets/admin/js/pages/crud/forms/widgets/bootstrap-select.js" type="text/javascript"></script>

}




@using (Html.BeginForm("Create", "UserGroup", FormMethod.Post, new { @class = "kt-form kt-form--label-right" }))
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-xl-12">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">Phân quyền Nhóm tài khoản<small></small></h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-wrapper">

                        </div>
                    </div>
                </div>



                <div class="kt-portlet__body">
                    <div class="kt-section kt-section--first">
                        <div class="kt-section__body">

                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-9 col-xl-6">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="row">
                                <label class="col-xl-3"></label>
                                <div class="col-lg-9 col-xl-6">
                                    <h3 class="kt-section__title kt-section__title-sm titleHolder">Thông tin quyền trong hệ thống</h3>
                                </div>
                            </div>

                            <div class="form-group row">
                                @*<label class="col-xl-3 col-lg-3 col-form-label">Tên đăng nhập</label>*@
                                @Html.LabelFor(model => model.roleId, htmlAttributes: new { @class = "col-xl-3 col-lg-3 col-form-label" })
                                <div class="col-lg-9 col-xl-6">
                                    @*<input class="form-control" type="text" placeholder="Nhập tên đăng nhập">*@
                                    @Html.ListBoxFor(model => model.roleId, items, new {@class="kt-selectpicker form-control", multiple = "multiple"})
                                    @Html.ValidationMessageFor(model => model.roleId, "", new { @class = "text-danger" })
                                </div>
                            </div>











                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-3 col-xl-3">
                            </div>
                            <div class="col-lg-9 col-xl-9">
                                <button type="submit" id="submitProject" class="btn btn-success">Submit</button>&nbsp;
                                @Html.ActionLink("Cancel", "Index", "Slide", null, new { @class = "btn btn-secondary" })

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
}

