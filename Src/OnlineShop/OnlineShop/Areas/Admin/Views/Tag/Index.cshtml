@model IEnumerable<Model.EntityFramework.Tag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section jsFooter
    {
    <script src="assets/admin/js/pages/crud/metronic-datatable/base/html-table.js" type="text/javascript"></script>

    <script src="assets/admin/js/pages/crud/datatables/extensions/buttons.js" type="text/javascript"></script>
    <script src="~/assets/admin/js/Controllers/accounts.js"></script>
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
        <div class="alert-text">
            A common UI paradigm to use with interactive tables is to present buttons that will trigger some action.
            See official documentation <a class="kt-link kt-font-bold" href="https://datatables.net/extensions/buttons/" target="_blank">here</a>.
        </div>
    </div>
    <div class="kt-portlet">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Quản lý tag
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">


                    <div class="dropdown dropdown-inline">
                        @*<button type="button" class="btn btn-brand btn-icon-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="flaticon2-plus"></i> Add New
                            </button>*@

                        @Html.ActionLink("Thêm tag", "Create", "Tag", null, new { @class = "flaticon2-plus btn btn-brand btn-icon-sm" })


                    </div>
                </div>
            </div>
        </div>


        <div class="kt-portlet__body">
            @using (Html.BeginForm("Index", "Tag", FormMethod.Get, new { @class = "kt-form kt-form--fit kt-margin-b-20" }))
            {

                <!--begin: Search Form -->

                <div class="row kt-margin-b-20">
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>ID</label>
                        <input name="ID" type="text" class="form-control kt-input" placeholder="Nhập ID" data-col-index="0">
                    </div>
                    <div class="col-lg-3 kt-margin-b-10-tablet-and-mobile">
                        <label>Tên tag:</label>
                        <input name="Name" type="text" class="form-control kt-input" placeholder="Nhập tên tag" data-col-index="1">
                    </div>
                </div>  
              
                <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-primary btn-brand--icon" id="kt_search">
                            <span>
                                <i class="la la-search"></i>
                                <span>Search</span>
                            </span>
                        </button>
                        &nbsp;&nbsp;
                        <a href="Admin/Account/Index" class="btn btn-secondary btn-secondary--icon">
                            <i class="la la-close"></i>
                            <span>Reset</span>
                        </a>


                    </div>
                </div>
            }
            <div class="kt-portlet__body kt-portlet__body--fit">
                <!--begin: Datatable -->
                <table class="kt-datatable" id="html_table" width="100%">
                    <thead>
                        <tr>
                            <th title="Field #1">ID</th>
                            <th title="Field #2">Tên Tag</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="/Admin/Tag/Edit/@item.ID" class="btn btn-success btn-circle btn-sm">Sửa </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
